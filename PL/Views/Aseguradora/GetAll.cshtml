@model ML.Aseguradora
@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Aseguradora</h1>


<div class="row">
    <div style="float:right">
         <a class=" btn btn-success" href="@Url.Action("Form", "Aseguradora")"> <i class="bi bi-plus-lg"></i></a> 
    </div>
</div>

<hr />


<table class="table table-bordered table-responsive" id="tablaAseguradora">
    <thead class="table-dark">
        <tr>
            <th>Editar</th>
            <th style="display: none">IdEmpresa</th>
            <th>Nombre</th>
            <th>Nombre Usuario</th>
            <th>Eliminar</th>
        </tr>
    </thead>

    <tbody>
        @foreach (ML.Aseguradora aseguradora in Model.Aseguradoras)
        {

            <tr>
                <td><a class="btn btn-warning" href="@Url.Action("Form","Aseguradora", new { IdAseguradora = aseguradora.IdAseguradora })">  <i class="bi bi-pencil-square"></i></a> </td>
                <td style="display:none">@aseguradora.IdAseguradora</td>
                <td>@aseguradora.Nombre</td>
                <td>@aseguradora.Usuario.Nombre</td>
                <td><a class="btn btn-danger" href="@Url.Action("Delete","Aseguradora", new { IdAseguradora = aseguradora.IdAseguradora})"onclick="return confirm('Estas seguro que deseas eliminar este registro?');"> <i class="bi bi-trash3-fill"></i>  </a></td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{

    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.1/js/dataTables.material.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.1/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#tablaAseguradora').DataTable({
                searching: false,
                "lengthMenu": [[5, 10, 15, 20, -1], [5, 10, 15, 20, "All"]],
                autoWidth: false,
                columnDefs: [
                    {
                        targets: ['_all'],
                        className: 'mdc-data-table__cell',
                    },
                ],
                language: {
                    url: "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json",
                },
             });
        });
    </script>
}