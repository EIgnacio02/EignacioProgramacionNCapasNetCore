@model ML.Usuario
@{
    ViewData["Title"] = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Formulario</h2>

    <div class="row">
        <div class="col-md-12">

            @using (Html.BeginForm("Form", "Usuario", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="form-horizontal ">
                    @*row 1*@
                    <div class="form-group">
                        <div class="row">
                            @*IdUsuario*@
                            <div class="col-3" style="display:none">
                                @Html.LabelFor(model => model.IdUsuario, new { @class = "hidden" })
                                @Html.TextBoxFor(model => model.IdUsuario, new { @class = "hidden form-control" })
                                @Html.ValidationMessageFor(model => model.IdUsuario)
                            </div>
                            @*UserName*@
                            <div class="col-3">
                                @Html.LabelFor(model => model.UserName)
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-person-circle"></i></span>
                                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control" })
                                </div>
                                    @Html.ValidationMessageFor(model => model.UserName)
                            </div>

                            @*NombreUsuario*@
                            <div class="col-md-3">
                                @Html.LabelFor(model => model.Nombre)
                                <div class="input-group"> 
                                    <span class="input-group-text"><i class="bi bi-person-fill-add"></i></span>
                                    @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control",@id="txtNombre", @onKeyDown = "return SoloLetras(event,'lblNombre')" })
                                </div>
                                @Html.Label("",null,new{@id="lblNombre"})
                                @Html.ValidationMessageFor(model => model.Nombre)
                            </div>

                            @*Apellido Paterno*@
                            <div class="col-md-3">

                                @Html.LabelFor(model => model.ApellidoPaterno)
                                <div class="input-group"> 
                                    <span class="input-group-text"><i class="bi bi-person-fill-add"></i></span>
                                    @Html.TextBoxFor(model => model.ApellidoPaterno, new { @class = "form-control",@id="txtApellidoPaterno", @onKeyDown = "return SoloLetras(event,'lblApellidoPaterno')" })
                                </div>
                                @Html.Label("",null,new{@id="lblApellidoPaterno"})
                                @Html.ValidationMessageFor(model => model.ApellidoPaterno)
                            </div>

                            @*Apellido Materno*@
                            <div class="col-md-3">

                                @Html.LabelFor(model => model.ApellidoMaterno)
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-person-fill-add"></i></span>
                                    @Html.TextBoxFor(model => model.ApellidoMaterno, new { @class = "form-control",@id="txtApellidoMaterno", @onKeyDown = "return SoloLetras(event,'lblApellidoMaterno')" })
                                </div>
                                    @Html.Label("",null,new{@id="lblApellidoMaterno"})
                                    @Html.ValidationMessageFor(model => model.ApellidoMaterno)
                            </div>


                        </div>
                    </div>
                    @*row 2*@
                    <div class="form-group">
                        <div class="row">
                            @*Email*@
                            <div class="col-md-3">
                                @Html.LabelFor(model => model.Email)
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control",@id="txtEmail", @onkeyup = "ValidateEmail()" })
                                </div>
                                    <span id="lblError"></span>
                                    @Html.Label("",null, new{@id="lblEmail"})
                                    @Html.ValidationMessageFor(model => model.Email)
                            </div>

                            @*password*@
                            <div class="col-md-3">
                                @Html.LabelFor(model => model.Password)
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-unlock-fill"></i></span>
                                    @*/, @onkeyup = "return ValidarPassword(event,'lblPassword')/*@
                                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control",@id="txtPasssword", @onkeyup = "ValidarPassword(this.value)"})
                                </div>
                                    <span id="lblPassword"></span>
                                    @*@Html.Label("",null, new{@id="lblPassword"})*@
                                    @Html.ValidationMessageFor(model => model.Password)
                            </div>

                            @*Telefono*@
                            <div class="col-md-3">

                                @Html.LabelFor(model => model.Telefono)
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-telephone-fill"></i></span>
                                        @Html.TextBoxFor(model => model.Telefono, new { @class = "form-control",@id="txtTelefono", @onkeypress = "return SoloNumeros(event,'lblTelefono')"})
                                </div>
                                        @Html.Label("",null, new{@id="lblTelefono"})
