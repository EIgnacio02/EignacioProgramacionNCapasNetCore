                                    @Html.Label("Femenino")
                                    @Html.RadioButtonFor(model => model.Sexo,"F")

                                </div>
                                    @Html.ValidationMessageFor(model => model.Sexo)
                                </div>
                            </div>
                        
                             <div class="col-md-3">

                                @Html.LabelFor(model => model.Curp)
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-clipboard-fill"></i></span>

                                    @Html.TextBoxFor(model => model.Curp, new { @class = "form-control",@maxlength="18" ,@id="curp_input",@onkeyup = "validarInput(this)"})
                                </div>
